<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <ImageView
        android:id="@+id/header_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_person_bg"
        android:backgroundTint="@color/grey"
        android:scaleType="center"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_eye"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/header_person_bg"
        android:backgroundTint="@color/main_blue"
        android:scaleType="centerInside"
        android:src="@drawable/ic_eye"
        app:layout_constraintBottom_toBottomOf="@id/header_iv"
        app:layout_constraintEnd_toEndOf="@id/header_iv" />

    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/user_name"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        app:layout_constraintBottom_toBottomOf="@id/header_iv"
        app:layout_constraintStart_toEndOf="@id/header_iv"
        app:layout_constraintTop_toTopOf="@id/header_iv"
        tools:text="Ahmed Mostafa" />

    <TextView
        android:id="@+id/header_view_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_profile"
        android:textColor="@color/main_blue"
        app:layout_constraintStart_toStartOf="@id/header_name"
        app:layout_constraintTop_toBottomOf="@id/header_name" />


</androidx.constraintlayout.widget.ConstraintLayout>